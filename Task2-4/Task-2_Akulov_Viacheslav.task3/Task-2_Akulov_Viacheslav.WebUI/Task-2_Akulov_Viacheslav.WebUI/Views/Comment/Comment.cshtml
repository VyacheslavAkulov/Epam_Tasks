
@using Task_2_Akulov_Viacheslav.Models
@using Task_2_Akulov_Viacheslav.WebUI.Models
@model IEnumerable<Task_2_Akulov_Viacheslav.Models.Comment>
@{
    ViewBag.Title = "Comments";
}
<h2>Отзывы</h2>
<div>
    <table border="0">
        <tr class="header">
            <td><p>Номер  </p></td>
            <td><p>Автор  </p></td>
            <td><p>Дата  </p></td>
            <td><p>Текст отзыва  </p></td>
            <td></td>
        </tr>
        @foreach (Task_2_Akulov_Viacheslav.Models.Comment b in Model)
        {
            <tr>
                <td><p>@b.Id  </p></td>
                <td><p>@b.Name  </p></td>
                <td><p>@b.Date  </p></td>
                <td><p>@b.Text  <br /></p></td>
            </tr>

        }
    </table>
</div>
<br />
@if (User.Identity.IsAuthenticated)
{
    Html.RenderPartial("CommentPartial", new CommentViewModel());
}


